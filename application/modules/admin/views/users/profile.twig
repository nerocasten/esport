{% extends '/templates/admin_template.html' %}

{% block scryle %}
{{parent()}}
<link href="{{__t.a('bootstrap-fileinput/bootstrap-fileinput.css','3party')}}" rel="stylesheet" type="text/css" />
{% endblock scryle %}

{% block content %}
	<!-- BEGIN SAMPLE FORM PORTLET-->
    <div class="portlet light bordered">
        <div class="portlet-title tabbable-line">
            <div class="caption">
                <i class="icon-bubble font-green-sharp"></i>
                <span class="caption-subject font-green-sharp bold uppercase">User's Info</span>
            </div>
            <ul class="nav nav-tabs">
                <li>
                    <a href="#mngpassword" data-toggle="tab"> Password Manager</a>
                </li>
                <li class="active">
                    <a href="#basic" data-toggle="tab"> Basic </a>
                </li>
            </ul>
        </div>
        <div class="portlet-body form">
            <div class="tab-content">
                <div class="tab-pane active" id="basic">        
                    <form role="form" method="post" enctype="multipart/form-data">
                        <div class="form-body">
                            <div class="form-group {{form_error('username')?'has-error':''}}">
                                <label>User Name*</label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user font-purple"></i>
                                    </span>
                                    <input type="text" class="form-control" placeholder="User Name" name="username" value="{{user_profile.username}}" disabled="">         
                                </div>
                                {{form_error('username')}}
                            </div>   

                            <div class="form-group last clearfix">
                                <label>Avatar</label>
                                <div class="col-xs-12">
                                    <div class="fileinput fileinput-new" data-provides="fileinput">
                                        <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                            <img src="{{__t.adminlib.user_avatar(user_profile.avatar)}}" alt="" /> </div>
                                        <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"> </div>
                                        <div>
                                            <span class="btn default btn-file">
                                                <span class="fileinput-new"> Select image </span>
                                                <span class="fileinput-exists"> Change </span>
                                                <input type="file" name="avatar"> </span>
                                            <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                        </div>
                                    </div>
                                    <div class="clearfix margin-top-10">
                                        <span class="label label-danger">NOTE!</span> Image preview only works in IE10+, FF3.6+, Safari6.0+, Chrome6.0+ and Opera11.1+. In older browsers the filename is shown instead.
                                    </div>
                                </div>
                            </div>             
                            <div class="form-group {{form_error('email')?'has-error':''}}">
                                <label>Email Address*</label>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-envelope font-purple"></i>
                                    </span>
                                    <input type="text" class="form-control" placeholder="Email Address" name="email" value="{{user_profile.email}}">
                                </div>
                                {{form_error('email')}}
                            </div>
                            <div class="form-group">
                                <label>First Name</label>
                                <input class="form-control spinner" type="text" placeholder="First Name" name="first_name" value="{{user_profile.first_name}}" />
                            </div>
                            <div class="form-group">
                                <label>Last Name</label>
                                <input class="form-control spinner" type="text" placeholder="Last Name" name="last_name" value="{{user_profile.last_name}}" />
                            </div>
                        </div>
                        <div class="form-actions right">
                            <button type="submit" class="btn green">Save</button>
                        </div>
                    </form>                    
                </div>
                <div class="tab-pane" id="mngpassword">
                    <form role="form" method="post" action="{{site_url('admin/profile/change_password')}}">
                        <div class="form-body">
                            <div class="form-group">
                                <label for="password">Old*</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="old_password" placeholder="Old password" name="old_password">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user font-red"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="password">New*</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="new_password" placeholder="New Password" name="new_password">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user font-red"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="retype">Retype*</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="retype" placeholder="Password" name="retype">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user font-red"></i>
                                    </span>
                                </div>
                            </div> 
                        </div>
                        <div class="form-actions right">
                            <button type="submit" class="btn green">Change</button>
                        </div>
                    </form>      
                </div>
            </div>
        </div>
    </div>
    <!-- END SAMPLE FORM PORTLET-->
{% endblock content %}

{% block botscryle %}
<script src="{{__t.a('bootstrap-fileinput/bootstrap-fileinput.js','3party')}}" type="text/javascript"></script>
{{parent()}}
{% endblock botscryle %}