<div class="mt-element-card mt-element-overlay">
    <div class="row">
        {% if teams and teams|length>0 %}
        {% for team in teams %}
        <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12 team-card-wr-item">
            <div class="mt-card-item team-card-item">                
                <div class="mt-card-avatar mt-overlay-1">
                    <input type="hidden" class="team_id" name="team_ids[]" value="{{team.id}}">
                    <img src="{{__t.adminlib.team_image(team.image)}}" />
                    <div class="mt-overlay">
                        <ul class="mt-info">
                            <li>
                                <a class="btn default btn-outline btn-team-unselect" href="javascript:;">
                                    <i class="fa fa-times"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                
                <div class="mt-card-content">
                    <h3 class="mt-card-name">{{team.name}}</h3>
                    <p class="mt-card-desc font-grey-mint"></p>
                </div>
            </div>
        </div>  
        {% endfor %}
        {% endif %}
    </div>
</div>

<script>
    $(document).ready(function(){
        $('.btn-team-unselect').click(function(){
            $(this).parents('.team-card-wr-item').remove();
        });
    });
</script>